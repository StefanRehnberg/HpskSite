{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "2e8d0b21-ce0f-4387-ae54-2c333bac8ca1",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "Security": {
        "AllowConcurrentLogins": true,
        "KeepUserLoggedIn": true,
        "MemberPassword": {
          "RequiredLength": 6,
          "RequireNonLetterOrDigit": false,
          "RequireDigit": false,
          "RequireLowercase": false,
          "RequireUppercase": false
        },
        "UserPassword": {
          "RequiredLength": 10
        }
      },
      "Member": {
        "CookieTimeout": "365.00:00:00"
      }
    }
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=(localdb)\\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\\Umbraco.mdf;Integrated Security=True;Command Timeout=120",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
  },
  "Email": {
    "SmtpHost": "YOUR_SMTP_HOST",
    "SmtpPort": 587,
    "UseSsl": true,
    "Username": "YOUR_SMTP_USERNAME",
    "Password": "YOUR_SMTP_PASSWORD",
    "FromAddress": "YOUR_FROM_EMAIL",
    "FromName": "HPSK Site",
    "AdminEmail": "YOUR_ADMIN_EMAIL",
    "SiteUrl": "https://your-domain.com"
  },
  "MemberActivity": {
    "ThrottleMinutes": 5,
    "EnableTracking": true
  },
  "HandicapSettings": {
    "ReferenceSeriesScore": 48.0,
    "MaxHandicapPerSeries": 10.0,
    "RequiredMatches": 5,
    "ProvisionalAverages": {
      "Klass 1 - Nybörjare": 44.0,
      "Klass 2 - Guldmärkesskytt": 46.0,
      "Klass 3 - Riksmästare": 48.0
    }
  },
  "JwtSettings": {
    "Secret": "YOUR_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS",
    "Issuer": "HpskSite",
    "Audience": "HpskMobile",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 3650
  },
  "TargetPhotos": {
    "RetentionDays": 90,
    "MaxFileSizeMB": 5,
    "MaxDimensionPx": 1200,
    "JpegQuality": 80
  }
}

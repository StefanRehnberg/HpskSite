@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "Master.cshtml";

    // Detect regional context
    var pageRegionCode = Model.Value<string>("regionCode") ?? "";
    var parentRegionCode = "";
    var regionName = "";
    var isInRegionalContext = false;

    // Check if parent is a regional page
    if (Model.Parent != null && Model.Parent.ContentType.Alias == "regionalPage")
    {
        parentRegionCode = Model.Parent.Value<string>("regionCode") ?? "";
        regionName = Model.Parent.Value<string>("regionName") ?? Model.Parent.Name;
        isInRegionalContext = true;
    }

    // Use page's own regionCode if set, otherwise use parent's
    var activeRegionCode = !string.IsNullOrEmpty(pageRegionCode) ? pageRegionCode : parentRegionCode;

    ViewBag.Title = isInRegionalContext ? $"Klubbar i {regionName}" : "Klubbar";
}

<div class="container-fluid">
    <!-- Clubs Directory -->
    <div class="card">
        <div class="card-header">
            @if (isInRegionalContext)
            {
                <h5 class="mb-0">Klubbar i @regionName</h5>
                <p class="mb-0 small text-muted">Hitta och kontakta skytteföreningar i din krets</p>
            }
            else
            {
                <h5 class="mb-0">Klubbkatalog</h5>
                <p class="mb-0 small text-muted">Hitta och kontakta skytteföreningar</p>
            }
        </div>
        <div class="card-body">
            <!-- Filter Section -->
            @if (!isInRegionalContext)
            {
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="kretsFilter" class="form-label">Välj krets</label>
                        <select class="form-select form-select-lg-mobile" id="kretsFilter" onchange="filterClubsByKrets()">
                            <option value="">Alla kretsar</option>
                        </select>
                    </div>
                </div>
            }
            else
            {
                <!-- Hidden input to store region code for JavaScript -->
                <input type="hidden" id="kretsFilter" value="@activeRegionCode" />
                <div class="mb-3">
                    <a href="@Model.Root().Url()clubs" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i> Visa alla klubbar i hela Sverige
                    </a>
                </div>
            }

            <div id="clubsTableContainer">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Laddar...</span>
                    </div>
                    <p>Laddar klubbar...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@* Bootstrap Icons (Bootstrap JS is already loaded in Master.cshtml) *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

<script>
// Regional context from server
const isInRegionalContext = @(isInRegionalContext ? "true" : "false");
const presetRegionCode = '@activeRegionCode';

// Regional Federations data (from Models/Federations.cs)
const regionalFederations = [
    { value: 'Blekinge', description: 'Blekinge Pistolskyttekrets' },
    { value: 'Dalarna', description: 'Dalarnas Pistolskyttekrets' },
    { value: 'Gotland', description: 'Gotlands Pistolskyttekrets' },
    { value: 'Gavleborg', description: 'Gävleborgs Pistolskyttekrets' },
    { value: 'Goteborg', description: 'Göteborg och Bohusläns Pistol.Krets' },
    { value: 'Halland', description: 'Hallands Pistolskyttekrets' },
    { value: 'Jamtland', description: 'Jämtlands Läns Pistolskyttekrets' },
    { value: 'Jonkoping', description: 'Jönköpings Läns Pistolskyttekrets' },
    { value: 'KalmarNorra', description: 'Kalmar Läns Norra Pistolskyttekrets' },
    { value: 'KalmarSodra', description: 'Kalmar Läns Södra Pistolskyttekrets' },
    { value: 'Kristianstad', description: 'Kristianstads Pistolskyttekrets' },
    { value: 'Kronoberg', description: 'Kronobergs Läns Pistolskyttekrets' },
    { value: 'Malmohus', description: 'Malmöhus Pistolskyttekrets' },
    { value: 'Norrbotten', description: 'Norrbottens Pistolskyttekrets' },
    { value: 'Skaraborg', description: 'Skaraborgs Pistolskyttekrets' },
    { value: 'Stockholm', description: 'Stockholms Pistolskyttekrets' },
    { value: 'Sodermanland', description: 'Södermanlands Pistolskyttekrets' },
    { value: 'Uppsala', description: 'Uppsala Läns Pistolskyttekrets' },
    { value: 'Varmland', description: 'Värmlands Pistolskyttekrets' },
    { value: 'Vasterbotten', description: 'Västerbottens Läns Pistolskyttekrets' },
    { value: 'Vasternorrland', description: 'Västernorrlands Läns Pistolskyttekrets' },
    { value: 'VastgotaDal', description: 'Västgöta-Dals Pistolskyttekrets' },
    { value: 'Vastmanland', description: 'Västmanlands Pistolskyttekrets' },
    { value: 'Alvsborg', description: 'Älvsborgs Pistolskyttekrets' },
    { value: 'Orebro', description: 'Örebro Läns Pistolskyttekrets' },
    { value: 'Ostergotland', description: 'Östergötlands Pistolskyttekrets' }
];

function populateKretsFilter() {
    const select = document.getElementById('kretsFilter');

    // If in regional context, filter is a hidden input - don't populate dropdown
    if (isInRegionalContext) {
        return;
    }

    select.innerHTML = '<option value="">Alla kretsar</option>';
    regionalFederations.forEach(f => {
        // Default to Halland if not in regional context and no preset
        const selected = (presetRegionCode ? f.value === presetRegionCode : f.value === 'Halland') ? 'selected' : '';
        select.innerHTML += `<option value="${f.value}" ${selected}>${f.description}</option>`;
    });
}

function filterClubsByKrets() {
    // Use server-side filtering for performance
    loadClubsTable();
}

document.addEventListener('DOMContentLoaded', function() {
    populateKretsFilter();
    loadClubsTable();
});

async function loadClubsTable() {
    const container = document.getElementById('clubsTableContainer');
    const selectedKrets = document.getElementById('kretsFilter').value;

    // Show loading state
    container.innerHTML = `
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Laddar...</span>
            </div>
            <p>Laddar klubbar...</p>
        </div>
    `;

    try {
        // Use server-side filtering endpoint
        const url = `/umbraco/surface/ClubAdmin/GetClubsByKrets?krets=${encodeURIComponent(selectedKrets)}`;
        const response = await fetch(url);
        const data = await response.json();

        if (data.success) {
            displayClubsTable(data.clubs);
        } else {
            container.innerHTML = '<div class="alert alert-danger">Fel vid laddning av klubbar: ' + data.message + '</div>';
        }
    } catch (error) {
        console.error('Error loading clubs:', error);
        container.innerHTML = '<div class="alert alert-danger">Fel vid laddning av klubbar. Försök igen.</div>';
    }
}

function displayClubsTable(clubs) {
    const container = document.getElementById('clubsTableContainer');

    if (!clubs || clubs.length === 0) {
        container.innerHTML = '<div class="alert alert-info">Inga klubbar hittades.</div>';
        return;
    }

    let tableHtml = `
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Klubbnamn</th>
                        <th class="d-none d-md-table-cell">Stad</th>
                        <th class="d-none d-lg-table-cell">E-post</th>
                        <th class="d-none d-lg-table-cell">Tel</th>
                        <th style="width: 120px;"></th>
                    </tr>
                </thead>
                <tbody>
    `;

    clubs.forEach(club => {
        // Determine navigation URL: external website or internal club page
        let navigationUrl = '';
        let linkTarget = '';

        if (club.webSite && club.webSite.trim() !== '') {
            // Club has external website - use that
            navigationUrl = club.webSite;
            linkTarget = ' target="_blank" rel="noopener noreferrer"';
        } else {
            // No external website - navigate to internal club page
            // Use current page URL as base for regional context
            const currentPageUrl = '@Model.Url()'.replace(/\/$/, '');
            const clubSlug = club.urlSegment || club.name.toLowerCase().replace(/\s+/g, '-');
            navigationUrl = `${currentPageUrl}/${clubSlug}`;
        }

        tableHtml += `
            <tr>
                <td>
                    <div class="club-name-cell">
                        <strong class="d-block">${club.name}</strong>
                        ${club.description ? `<small class="text-muted d-block mt-1 club-description">${club.description}</small>` : ''}
                        ${club.city ? `<small class="text-muted d-block d-md-none mt-1"><i class="bi bi-geo-alt"></i> ${club.city}</small>` : ''}
                    </div>
                </td>
                <td class="d-none d-md-table-cell">${club.city || '-'}</td>
                <td class="d-none d-lg-table-cell">${club.contactEmail ? `<a href="mailto:${club.contactEmail}" class="club-email-link">${club.contactEmail}</a>` : '-'}</td>
                <td class="d-none d-lg-table-cell">${club.contactPhone || '-'}</td>
                <td class="text-end club-actions">
                    ${club.contactEmail ? `<a href="mailto:${club.contactEmail}" class="btn btn-outline-secondary club-action-btn d-lg-none" title="E-post"><i class="bi bi-envelope"></i></a>` : ''}
                    ${club.contactPhone ? `<a href="tel:${club.contactPhone}" class="btn btn-outline-secondary club-action-btn d-lg-none" title="Ring"><i class="bi bi-telephone"></i></a>` : ''}
                    <a href="${navigationUrl}"${linkTarget} class="btn btn-outline-primary club-action-btn" title="Öppna hemsida" data-bs-toggle="tooltip">
                        <i class="bi bi-globe"></i>
                    </a>
                </td>
            </tr>
        `;
    });

    tableHtml += `
                </tbody>
            </table>
        </div>
    `;

    container.innerHTML = tableHtml;

    // Initialize Bootstrap tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
}
</script>

<style>
.club-name-cell {
    min-height: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.table > thead {
    background-color: var(--bs-tertiary-bg);
    border-bottom: 2px solid var(--bs-border-color);
}

.table > thead > tr > th {
    font-weight: 600;
    color: var(--bs-body-color);
    border-bottom: 2px solid var(--bs-border-color);
    padding: 0.5rem 0.75rem;
}

.table tbody tr {
    transition: background-color 0.2s ease;
}

.table tbody tr:hover {
    background-color: var(--bs-tertiary-bg);
}

.table td {
    vertical-align: middle;
    padding: 0.5rem 0.75rem;
}

/* Mobile-friendly club table styles */

/* Action buttons - larger touch targets */
.club-action-btn {
    min-width: 44px;
    min-height: 44px;
    padding: 0.5rem;
    margin: 2px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

/* Action buttons container */
.club-actions {
    white-space: nowrap;
}

/* Email link truncation on medium screens */
.club-email-link {
    display: inline-block;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    vertical-align: middle;
}

/* Mobile adjustments */
@@media (max-width: 767.98px) {
    /* Hide description on very small screens to save space */
    .club-description {
        display: none !important;
    }

    /* Tighter padding on mobile */
    .table td {
        padding: 0.5rem 0.35rem;
    }

    /* Action buttons column */
    .club-actions {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        gap: 4px;
    }

    /* Smaller action buttons on mobile but still touch-friendly */
    .club-action-btn {
        min-width: 40px;
        min-height: 40px;
        padding: 0.4rem;
        font-size: 0.9rem;
    }
}

/* Medium screens - show city, hide contact info */
@@media (min-width: 768px) and (max-width: 991.98px) {
    .club-email-link {
        max-width: 150px;
    }
}

/* Large screens - full email visible */
@@media (min-width: 992px) {
    .club-email-link {
        max-width: none;
    }
}

/* Larger select on mobile for better touch target */
@@media (max-width: 767.98px) {
    .form-select-lg-mobile {
        min-height: 48px;
        font-size: 1rem;
    }
}
</style>
@*
    Tutorial Icon & Banner - Automatically shows based on current page
    Detects page and only displays if a tutorial is configured for that page
*@

<!-- Fixed Persistent Icon (top-right corner, hidden on mobile) -->
<i class="bi bi-play-circle-fill tutorial-persistent-icon"
   onclick="TutorialHelper.openCurrentPageTutorial()"
   data-bs-toggle="tooltip"
   data-bs-placement="left"
   data-bs-title="Klicka för instruktioner"
   id="tutorial-icon"
   style="display: none;"></i>

<!-- First-Time Help Banner -->
<div class="tutorial-banner" id="tutorial-banner" style="display: none;">
    <div class="tutorial-banner-content">
        <i class="bi bi-camera-video tutorial-banner-icon"></i>
        <div id="tutorial-banner-text">
            <strong>Första gången här?</strong>
            <p class="mb-0" id="tutorial-banner-description">Se vår guide för denna sida!</p>
        </div>
    </div>
    <div class="tutorial-banner-actions">
        <div class="tutorial-play-card" onclick="TutorialHelper.openCurrentPageTutorialAndDismissBanner()">
            <i class="bi bi-play-circle-fill tutorial-play-icon"></i>
            <span class="tutorial-play-text">Visa video</span>
        </div>
        <button type="button" class="btn-close"
                onclick="TutorialHelper.dismissCurrentPageBanner()"></button>
    </div>
</div>

<script>
    // Auto-show tutorial elements if available for current page
    document.addEventListener('DOMContentLoaded', function() {
        TutorialHelper.initPageTutorial();
    });
</script>

function updateSelectedGroupsDisplay() {
    const selectedCheckboxes = document.querySelectorAll('#memberGroupsDropdownMenu input[type="checkbox"]:checked');
    const selectedCount = selectedCheckboxes.length;
    const selectedNames = Array.from(selectedCheckboxes).map(cb => cb.value);

    const displayText = document.getElementById('selectedGroupsText');
    const countText = document.getElementById('selectedGroupsCount');

    if (selectedCount === 0) {
        displayText.textContent = 'Välj grupper';
        countText.textContent = 'Inga grupper valda';
    } else if (selectedCount === 1) {
        displayText.textContent = selectedNames[0];
        countText.textContent = '1 grupp vald';
    } else {
        displayText.textContent = selectedNames[0] + ` (+${selectedCount - 1} till)`;
        countText.textContent = `${selectedCount} grupper valda`;
    }
}

function updateSelectedClubsDisplay() {
    const selectedCheckboxes = document.querySelectorAll('#additionalClubsDropdownMenu input[type="checkbox"]:checked');
    const selectedCount = selectedCheckboxes.length;

    const displayText = document.getElementById('selectedClubsText');
    const countText = document.getElementById('selectedClubsCount');

    if (selectedCount === 0) {
        displayText.textContent = 'Välj klubbar';
        countText.textContent = 'Inga ytterligare klubbar valda';
    } else if (selectedCount === 1) {
        // Find the club name from availableClubs
        const clubId = parseInt(selectedCheckboxes[0].value);
        const club = availableClubs.find(c => c.id === clubId);
        displayText.textContent = club ? club.name : 'Klubb vald';
        countText.textContent = '1 klubb vald';
    } else {
        // Show first club name + count
        const firstClubId = parseInt(selectedCheckboxes[0].value);
        const firstClub = availableClubs.find(c => c.id === firstClubId);
        const firstName = firstClub ? firstClub.name : 'Klubb';
        displayText.textContent = firstName + ` (+${selectedCount - 1} till)`;
        countText.textContent = `${selectedCount} klubbar valda`;
    }
}


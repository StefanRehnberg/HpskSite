    if (precisionCollapse) {
        precisionCollapse.addEventListener('show.bs.collapse', function () {
            document.getElementById('precisionCollapseIcon').classList.replace('bi-chevron-right', 'bi-chevron-down');

            // Lazy load handicap data when accordion expands
            const memberId = document.getElementById('memberId').value;
            if (memberId && memberId !== '0' && handicapLoadedForMember !== memberId) {
                loadAdminHandicapProfile(memberId);
                handicapLoadedForMember = memberId;
            }
        });
        precisionCollapse.addEventListener('hide.bs.collapse', function () {
            document.getElementById('precisionCollapseIcon').classList.replace('bi-chevron-down', 'bi-chevron-right');
        });
    }
});

// Load handicap profile for a specific member (admin only)
function loadAdminHandicapProfile(memberId) {
    const container = document.getElementById('adminHandicapInfoContainer');
    container.innerHTML = `
        <div class="text-center py-3">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Laddar...</span>
            </div>
        </div>
    `;

    fetch(`/umbraco/surface/Member/GetHandicapProfileForMember?memberId=${memberId}`)
        .then(response => response.json())
        .then(response => {
            if (response.success && response.data) {
                const data = response.data;
                renderAdminHandicapInfo(data.weaponClasses, data.shooterClass, data.settings);
            } else {
                container.innerHTML = '<p class="text-muted small mb-0">Ingen handicapinformation tillgänglig.</p>';
            }
        })
        .catch(error => {
            console.error('Error loading handicap profile:', error);
            container.innerHTML = '<p class="text-muted small mb-0">Kunde inte ladda handicapinformation.</p>';
        });
}

// Helper functions for quarter-point handicap display
function roundToQuarterAdmin(value) {
    return Math.round(value * 4) / 4;
}

function formatHandicapAdmin(value) {
    const rounded = roundToQuarterAdmin(value);
    const sign = rounded >= 0 ? '+' : '';
    // Show decimals only if not a whole number
    const formatted = Number.isInteger(rounded) ? rounded.toString() : rounded.toFixed(2);
    return sign + formatted;
}

// Render handicap info cards for admin view
function renderAdminHandicapInfo(weaponClasses, shooterClass, settings) {
    const container = document.getElementById('adminHandicapInfoContainer');

    // Check for shooter class
    if (!shooterClass) {
        container.innerHTML = `
            <div class="alert alert-info py-2 mb-0 small">
                <i class="bi bi-info-circle me-1"></i>
                Medlemmen har inte valt skytteklass än. Inget handicap kan beräknas.
            </div>
        `;
        return;
    }

    // Check for any statistics
    if (!weaponClasses || weaponClasses.length === 0) {
        container.innerHTML = `
            <div class="alert alert-info py-2 mb-0 small">
                <i class="bi bi-info-circle me-1"></i>
                Medlemmen har inga registrerade resultat att beräkna handicap på.
            </div>
        `;
        return;
    }

    // Build the handicap cards HTML
    let html = `
        <div class="small text-muted mb-2">
            Skytteklass: <strong>${shooterClass}</strong>
        </div>
    `;

    weaponClasses.forEach(wc => {
        const provBadge = wc.isProvisional
            ? '<span class="badge bg-warning text-dark ms-2" title="Provisoriskt handicap">(P)</span>'
            : '';
        const handicapDisplay = formatHandicapAdmin(wc.handicapPerSeries);
        const progress = Math.min((wc.completedMatches / wc.requiredMatches) * 100, 100);
        const rawHandicap = wc.referenceScore - wc.effectiveAverage;
        const roundedHandicap = roundToQuarterAdmin(rawHandicap);

        html += `
            <div class="card mb-2 border">
                <div class="card-body py-2 px-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <strong class="small">${wc.weaponClass} <span class="text-muted fw-normal">(${wc.weaponClassName})</span></strong>
                        <span class="small">Handicap: <strong>${handicapDisplay}</strong>${provBadge}</span>
                    </div>
                    <div class="small text-muted">
                        <div class="mb-1">
                            <strong>Beräkning:</strong> Referens (${wc.referenceScore}) − Snitt (${wc.effectiveAverage.toFixed(1)}) = ${rawHandicap.toFixed(2)} → <strong>${handicapDisplay}</strong>
                        </div>
                        <div>
                            Faktiskt snitt: ${wc.actualAverage.toFixed(1)} p/serie
                            ${wc.isProvisional ? `<br>Viktat med skytteklass tills ${wc.requiredMatches} matcher genomförda.` : ''}
                        </div>
                    </div>
                    ${wc.isProvisional ? `
                    <div class="mt-2">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: ${progress}%"></div>
                        </div>
                        <small class="text-muted">${wc.completedMatches} av ${wc.requiredMatches} matcher</small>
                    </div>
                    ` : `
                    <small class="text-success d-block mt-1"><i class="bi bi-check-circle me-1"></i>Fullständigt handicap</small>
                    `}
                </div>
            </div>
        `;
    });

    container.innerHTML = html;
}

// Recalculate handicap for the member being edited (admin function)
function recalculateAdminHandicap() {
    const memberId = document.getElementById('memberId').value;
    if (!memberId) {
        alert('Ingen medlem vald');
        return;
    }

    const btn = document.getElementById('adminRecalculateHandicapBtn');
    const originalContent = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Beräknar...';

    fetch('/umbraco/surface/Member/RecalculateHandicapForMember', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
        },
        body: JSON.stringify({ memberId: parseInt(memberId) })
    })
    .then(response => response.json())
    .then(data => {
        btn.disabled = false;
        btn.innerHTML = originalContent;

        if (data.success) {
            // Reload handicap profile to show updated values
            loadAdminHandicapProfile(memberId);
        } else {
            alert('Kunde inte omberäkna handicap: ' + (data.message || 'Okänt fel'));
        }
    })
    .catch(error => {
        console.error('Error recalculating handicap:', error);
        btn.disabled = false;
        btn.innerHTML = originalContent;
        alert('Fel vid omberäkning av handicap');
    });
}


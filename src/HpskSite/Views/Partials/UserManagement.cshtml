    // Redesigned with Club Management pattern and Swedish translation
}

<!-- Flatpickr Date/Time Picker -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/sv.js"></script>

<div id="userManagement">
    <!-- Pending Approvals Section -->
    <div class="card mb-3 border-warning">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="bi bi-clock-history"></i>
                Väntande godkännanden
                <span class="badge bg-dark ms-2" id="pendingCount">0</span>
            </h5>
        </div>
        <div class="card-body" id="pendingApprovals">
            <div class="text-center">
                <div class="spinner-border spinner-border-sm" role="status"></div>
                Laddar väntande godkännanden...
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Användarhantering</h4>
        <div>
            <button class="btn btn-success" onclick="showAddUserModal()">
                <i class="bi bi-plus-circle me-1"></i>Ny användare
            </button>
        </div>
    </div>

    <!-- Loading State -->
    <div class="spinner-border text-primary d-none" id="usersLoadingSpinner" role="status">
        <span class="visually-hidden">Laddar...</span>
    </div>

    <!-- Error Alert -->
    <div class="alert alert-danger d-none" id="usersErrorAlert" role="alert">
        <strong>Fel:</strong> <span id="usersErrorMessage"></span>
    </div>

    <!-- Empty State -->
    <div class="alert alert-info d-none text-center" id="noUsersAlert">
        <i class="bi bi-inbox me-2"></i>
        Inga användare hittades.
    </div>

    <!-- Users Table -->
    <div class="table-responsive" id="usersTableContainer">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th class="sortable" data-sort="name">Namn <i class="bi bi-arrow-down-up"></i></th>
                    <th class="sortable" data-sort="primaryClubName">Klubb <i class="bi bi-arrow-down-up"></i></th>
                    <th class="sortable" data-sort="lastActiveSortValue">Webb <i class="bi bi-arrow-down-up"></i></th>
                    <th class="sortable" data-sort="lastMobileActiveSortValue">App <i class="bi bi-arrow-down-up"></i></th>
                    <th>Grupper</th>
                    <th>Status</th>
                    <th class="text-end">Åtgärder</th>
                </tr>
            </thead>
            <tbody id="usersTableBody">
                <tr class="text-muted">
                    <td colspan="7" class="text-center py-4">Laddar användare...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


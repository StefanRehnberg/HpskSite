<script>
let availableGroups = [];
let availableClubs = [];
let allUsers = [];
let currentSortField = 'lastActiveSortValue';  // Default sort by last active
let currentSortDirection = 'desc';  // Newest first

// Lazy load user management data
let userManagementLoaded = false;

// Lazy load handicap data (only when accordion expands)
let handicapLoadedForMember = null;  // Track which member's handicap is loaded

document.addEventListener('DOMContentLoaded', function() {
    const usersTab = document.getElementById('users-tab');

    // Load when tab is clicked for the first time
    if (usersTab) {
        usersTab.addEventListener('shown.bs.tab', function() {
            if (!userManagementLoaded) {
                loadUsers();
                loadMemberGroups();
                loadClubsForDropdown();
                loadPendingApprovals();
                userManagementLoaded = true;
            }
        });
    }

    // Prevent dropdown from closing when clicking inside
    const dropdownMenu = document.getElementById('memberGroupsDropdownMenu');
    if (dropdownMenu) {
        dropdownMenu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    }

    const clubsDropdownMenu = document.getElementById('additionalClubsDropdownMenu');
    if (clubsDropdownMenu) {
        clubsDropdownMenu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    }

    // Add sortable column click handlers
    document.querySelectorAll('.sortable').forEach(header => {
        header.addEventListener('click', function() {
            const sortField = this.dataset.sort;
            if (currentSortField === sortField) {
                // Toggle direction if same column
                currentSortDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
            } else {
                // New column, default to descending (newest/highest first)
                currentSortField = sortField;
                currentSortDirection = 'desc';
            }
            sortAndDisplayUsers();
        });
    });

    // Initialize Flatpickr date picker
    flatpickr('#memberSince', {
        locale: 'sv',
        dateFormat: 'Y-m-d'
    });
});

function loadClubsForDropdown() {
    fetch('/umbraco/surface/ClubAdmin/GetClubs')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                availableClubs = data.data.filter(club => club.isActive);
            }
        })
        .catch(error => console.error('Error loading clubs:', error));
}

function loadUsers() {
    const spinner = document.getElementById('usersLoadingSpinner');
    const tableContainer = document.getElementById('usersTableContainer');
    const tbody = document.getElementById('usersTableBody');
    const errorAlert = document.getElementById('usersErrorAlert');
    const errorMessage = document.getElementById('usersErrorMessage');
    const noUsersAlert = document.getElementById('noUsersAlert');

    spinner?.classList.remove('d-none');
    errorAlert?.classList.add('d-none');
    noUsersAlert?.classList.add('d-none');

    fetch('/umbraco/surface/MemberAdmin/GetMembers')
        .then(response => response.json())
        .then(data => {
            spinner?.classList.add('d-none');

            if (!data.success) {
                errorMessage.textContent = data.message || 'Kunde inte ladda användare';
                errorAlert.classList.remove('d-none');
                tbody.innerHTML = '<tr class="text-muted"><td colspan="7" class="text-center py-4">Fel vid laddning av användare</td></tr>';
                return;
            }

            allUsers = data.data || [];

            if (allUsers.length === 0) {
                tableContainer.classList.add('d-none');
                noUsersAlert.classList.remove('d-none');
                tbody.innerHTML = '';
            } else {
                tableContainer.classList.remove('d-none');
                noUsersAlert.classList.add('d-none');
                sortAndDisplayUsers();  // Sort by last active (default) before displaying
            }
        })
        .catch(error => {
            console.error('Error:', error);
            spinner?.classList.add('d-none');
            errorMessage.textContent = error.message || 'Nätverksfel';
            errorAlert.classList.remove('d-none');
        });
}

function loadMemberGroups() {
    fetch('/umbraco/surface/MemberAdmin/GetMemberGroups')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                availableGroups = data.data;
            }
        })
        .catch(error => console.error('Error loading groups:', error));
}

function displayUsers() {
    const tbody = document.getElementById('usersTableBody');
    const template = document.getElementById('user-row-template').innerHTML;

    if (allUsers.length === 0) {
        tbody.innerHTML = '<tr class="text-muted"><td colspan="7" class="text-center py-4">Inga användare hittades</td></tr>';
        return;
    }

    tbody.innerHTML = allUsers.map(user => {
        const clubClass = user.hasInvalidClubReference ? 'text-danger fw-bold' : '';
        const clubName = user.primaryClubName || 'Ingen klubb';

        // Build additional clubs badges
        let additionalClubsBadges = '';
        if (user.additionalClubNames && user.additionalClubNames.length > 0) {
            additionalClubsBadges = '<br>' + user.additionalClubNames
                .map(name => `<span class="badge bg-info me-1 mt-1">${escapeHtml(name)}</span>`)
                .join('');
        }

        // Build groups badges
        const groupsBadges = user.groups && user.groups.length > 0
            ? user.groups.map(group => `<span class="badge bg-primary me-1 mb-1">${escapeHtml(group)}</span>`).join('')
            : '<span class="text-muted">Inga grupper</span>';

        const statusText = user.isApproved ? 'Godkänd' : 'Väntande';
        const statusClass = user.isApproved ? 'bg-success' : 'bg-warning';

        // Last active formatting
        const lastActiveDisplay = user.lastActiveDisplay || 'Never';
        const lastActiveSortValue = user.lastActiveSortValue || 0;
        const lastActiveClass = lastActiveDisplay === 'Never' ? 'text-muted' : '';

        // Mobile app last active formatting
        const lastMobileActiveDisplay = user.lastMobileActiveDisplay || 'Never';
        const lastMobileActiveSortValue = user.lastMobileActiveSortValue || 0;
        const lastMobileActiveClass = lastMobileActiveDisplay === 'Never' ? 'text-muted' : '';

        // Render avatar
        const avatarHtml = renderUserAvatar(user);

        return template
            .replace(/{id}/g, user.id)
            .replace(/{avatarHtml}/g, avatarHtml)
            .replace(/{firstName}/g, escapeHtml(user.firstName || ''))
            .replace(/{lastName}/g, escapeHtml(user.lastName || ''))
            .replace(/{email}/g, escapeHtml(user.email || ''))
            .replace(/{primaryClubName}/g, escapeHtml(clubName))
            .replace(/{clubClass}/g, clubClass)
            .replace(/{additionalClubsBadges}/g, additionalClubsBadges)
            .replace(/{groupsBadges}/g, groupsBadges)
            .replace(/{statusText}/g, statusText)
            .replace(/{statusClass}/g, statusClass)
            .replace(/{lastActiveDisplay}/g, lastActiveDisplay)
            .replace(/{lastActiveSortValue}/g, lastActiveSortValue)
            .replace(/{lastActiveClass}/g, lastActiveClass)
            .replace(/{lastMobileActiveDisplay}/g, lastMobileActiveDisplay)
            .replace(/{lastMobileActiveSortValue}/g, lastMobileActiveSortValue)
            .replace(/{lastMobileActiveClass}/g, lastMobileActiveClass);
    }).join('');
}

function sortAndDisplayUsers() {
    // Sort allUsers array based on current sort field and direction
    allUsers.sort((a, b) => {
        let aValue, bValue;

        if (currentSortField === 'lastActiveSortValue') {
            aValue = a.lastActiveSortValue || 0;
            bValue = b.lastActiveSortValue || 0;
        } else if (currentSortField === 'lastMobileActiveSortValue') {
            aValue = a.lastMobileActiveSortValue || 0;
            bValue = b.lastMobileActiveSortValue || 0;
        } else {
            aValue = a[currentSortField];
            bValue = b[currentSortField];
        }

        // Handle numeric comparison
        if (typeof aValue === 'number' && typeof bValue === 'number') {
            return currentSortDirection === 'asc' ? aValue - bValue : bValue - aValue;
        }

        // Handle string comparison
        const aStr = String(aValue || '').toLowerCase();
        const bStr = String(bValue || '').toLowerCase();

        if (currentSortDirection === 'asc') {
            return aStr.localeCompare(bStr);
        } else {
            return bStr.localeCompare(aStr);
        }
    });

    // Re-display the sorted users
    displayUsers();
}

function escapeHtml(text) {
    if (!text) return '';
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

function getInitials(firstName, lastName) {
    let initials = '';
    if (firstName) initials += firstName.charAt(0).toUpperCase();
    if (lastName) initials += lastName.charAt(0).toUpperCase();
    return initials || '?';
}

function renderUserAvatar(user) {
    if (user.profilePictureUrl) {
        return `<span class="member-avatar"><img src="${escapeHtml(user.profilePictureUrl)}" alt="${escapeHtml(user.firstName)} ${escapeHtml(user.lastName)}"></span>`;
    } else {
        return `<span class="member-avatar">${getInitials(user.firstName, user.lastName)}</span>`;
    }
}

function showAddUserModal() {
    document.getElementById('memberModalTitle').textContent = 'Lägg till ny medlem';
    document.getElementById('memberForm').reset();
    document.getElementById('memberId').value = '';

    // Clear new fields explicitly
    document.getElementById('phoneNumber').value = '';
    document.getElementById('shooterIdNumber').value = '';
    document.getElementById('address').value = '';
    document.getElementById('postalCode').value = '';
    document.getElementById('city').value = '';
    document.getElementById('personNumber').value = '';
    document.getElementById('memberSince').value = '';

    // Hide delete button for new members
    document.getElementById('deleteMemberBtn').style.display = 'none';

    // Hide profile picture section for new members
    document.getElementById('profilePictureSection').style.display = 'none';

    // Hide precision section for new members
    document.getElementById('adminPrecisionSection').style.display = 'none';

    // Clear shooter class selection
    document.querySelectorAll('input[name="precisionShooterClass"]').forEach(radio => radio.checked = false);

    renderMemberGroups([]);
    renderClubSelectors(null, []);
    new bootstrap.Modal(document.getElementById('memberModal')).show();
}

function editUser(userId) {
    document.getElementById('memberModalTitle').textContent = 'Redigera medlem';

    // Reset form and show loading state immediately
    document.getElementById('memberForm').reset();
    document.getElementById('memberId').value = userId;

    // Show loading overlay on form
    showMemberFormLoading(true);

    // Hide sections that will be populated later
    document.getElementById('deleteMemberBtn').style.display = 'none';
    document.getElementById('profilePictureSection').style.display = 'none';

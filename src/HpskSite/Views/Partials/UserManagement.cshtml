function renderClubSelectors(primaryClubId, additionalClubIds) {
    // Render primary club dropdown - build HTML string first, then set once
    const primaryClubSelect = document.getElementById('primaryClub');
    let optionsHtml = '<option value="">-- Ingen primär klubb --</option>';

    availableClubs.forEach(club => {
        const isSelected = primaryClubId && primaryClubId.toString() === club.id.toString();
        optionsHtml += `<option value="${club.id}" ${isSelected ? 'selected' : ''}>${club.name}</option>`;
    });
    primaryClubSelect.innerHTML = optionsHtml;

    // Render additional clubs checkboxes in dropdown
    const additionalClubsContainer = document.getElementById('additionalClubsDropdownMenu');

    if (availableClubs.length === 0) {
        additionalClubsContainer.innerHTML = '<p class="text-muted mb-0">Inga klubbar tillgängliga</p>';
        return;
    }

    // Build HTML string first, then set once (innerHTML += in loop is very slow)
    let checkboxesHtml = '';
    availableClubs.forEach(club => {
        const isChecked = additionalClubIds.includes(club.id);
        checkboxesHtml += `
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="${club.id}"
                       id="additionalClub_${club.id}" name="additionalClubs" ${isChecked ? 'checked' : ''}
                       onchange="updateSelectedClubsDisplay()">
                <label class="form-check-label" for="additionalClub_${club.id}">
                    ${club.name}
                </label>
            </div>
        `;
    });
    additionalClubsContainer.innerHTML = checkboxesHtml;

    // Update display
    updateSelectedClubsDisplay();
}

function renderMemberGroups(selectedGroups) {

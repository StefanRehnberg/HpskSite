@{
    var clubId = ViewBag.clubId as int? ?? 0;
}

<div class="club-calendar">
    <div class="card">
        <div class="card-header border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event me-2"></i>Klubbkalender
                </h5>
                <div class="btn-group btn-group-sm" role="group" aria-label="Kalendervy">
                    <button type="button" class="btn btn-outline-primary active" id="calendarViewBtn" title="Kalendervy">
                        <i class="bi bi-calendar3"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="listViewBtn" title="Listvy">
                        <i class="bi bi-list-ul"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Calendar Navigation -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <button id="prevMonth" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-chevron-left me-1"></i>Tidigare
                </button>
                <div class="d-flex align-items-center gap-2">
                    <h6 id="monthDisplay" class="mb-0">Januari 2025</h6>
                    <button id="todayBtn" class="btn btn-sm btn-primary" title="Gå till idag">
                        <i class="bi bi-calendar-check"></i>
                    </button>
                </div>
                <button id="nextMonth" class="btn btn-sm btn-outline-secondary">
                    Senare<i class="bi bi-chevron-right ms-1"></i>
                </button>
            </div>

            <!-- Calendar Grid -->
            <div class="calendar-grid mb-4">
                <!-- Days of week headers -->
                <div class="calendar-header">
                    <div class="day-header">Mån</div>
                    <div class="day-header">Tis</div>
                    <div class="day-header">Ons</div>
                    <div class="day-header">Tor</div>
                    <div class="day-header">Fre</div>
                    <div class="day-header">Lör</div>
                    <div class="day-header">Sön</div>
                </div>

                <!-- Calendar days -->
                <div id="calendarDays" class="calendar-days">
                    <!-- Populated by JavaScript -->
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Laddar...</span>
                    </div>
                </div>
            </div>

            <!-- List View -->
            <div class="event-list-view" style="display: none;">
                <div id="eventListContainer">
                    <!-- Populated by JavaScript -->
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Laddar...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event List for Selected Day -->
            <div id="selectedDayEvents" style="display: none;">
                <div class="alert alert-info mb-3">
                    <span id="selectedDateDisplay"></span>
                </div>
                <div id="eventsList" class="event-list">
                    <!-- Populated by JavaScript -->
                </div>
            </div>

            <!-- Event Type Legend -->
            <div class="mt-4 pt-3 border-top">
                <small class="text-muted d-block mb-2"><strong>Händelsetyper:</strong></small>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge" style="background-color: #0d6efd;"><i class="bi bi-flag-fill me-1"></i>Tävling</span>
                    <span class="badge" style="background-color: #198754;"><i class="bi bi-bullseye me-1"></i>Träning</span>
                    <span class="badge" style="background-color: #d63384;"><i class="bi bi-broom-fill me-1"></i>Städning</span>
                    <span class="badge" style="background-color: #fd7e14;"><i class="bi bi-megaphone-fill me-1"></i>Möte</span>
                    <span class="badge" style="background-color: #0dcaf0;"><i class="bi bi-people-fill me-1"></i>Socialt</span>
                    <span class="badge" style="background-color: #6c757d;"><i class="bi bi-tag-fill me-1"></i>Annat</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.calendar-grid {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    overflow: hidden;
}

.calendar-header {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 5px;
    margin-bottom: 10px;
    width: 100%;
}

.day-header {
    text-align: center;
    font-weight: 600;
    font-size: 0.85rem;
    padding: 8px;
    color: var(--bs-secondary-color);
    min-width: 0;
}

.calendar-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 5px;
    width: 100%;
}

.calendar-day {
    aspect-ratio: 1.5;
    border: 1px solid var(--bs-border-color);
    border-radius: 4px;
    padding: 6px;
    min-height: 70px;
    min-width: 0;
    display: flex;
    flex-direction: column;
    background: var(--bs-body-bg);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.85rem;
    overflow: hidden;
}

.calendar-day:hover {
    border-color: var(--bs-primary);
    background-color: var(--bs-primary-bg-subtle);
}

.calendar-day.other-month {
    background-color: var(--bs-secondary-bg);
    color: var(--bs-secondary-color);
}

.calendar-day.has-events {
    background-color: var(--bs-primary-bg-subtle);
    border-color: var(--bs-primary);
}

.calendar-day.today {
    background-color: var(--bs-warning-bg-subtle);
    border-color: var(--bs-warning);
    font-weight: 600;
}

.calendar-day-number {
    font-weight: 600;
    margin-bottom: 4px;
}

.calendar-day-events {
    flex: 1;
    overflow: hidden;
    font-size: 0.75rem;
}

.event-dot {
    display: inline-block;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    margin-right: 4px;
}

.event-item-preview {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 2px 0;
    line-height: 1.2;
}

.event-list {
    max-height: 400px;
    overflow-y: auto;
}

.event-list .list-group-item {
    border-left: 4px solid var(--bs-primary);
    padding: 10px 12px;
    margin-bottom: 8px;
    border-radius: 4px;
}

.event-list .event-name {
    font-weight: 600;
    display: block;
    margin-bottom: 4px;
}

.event-list .event-link {
    font-weight: 600;
    display: block;
    margin-bottom: 4px;
    color: var(--bs-primary);
    text-decoration: none;
    transition: color 0.2s ease;
}

.event-list .event-link:hover {
    color: var(--bs-primary-border-subtle);
    text-decoration: underline;
}

.event-list .event-meta {
    font-size: 0.85rem;
    color: var(--bs-secondary-color);
}

/* List View Styles */
.event-list-view {
    min-height: 400px;
}

.event-date-group {
    margin-bottom: 2rem;
}

.event-date-header {
    padding: 10px 0;
    border-bottom: 2px solid var(--bs-border-color);
    margin-bottom: 15px;
}

.event-date-header strong {
    font-size: 1.1rem;
    color: var(--bs-body-color);
}

.event-date-header .weekday {
    color: var(--bs-secondary);
    font-size: 0.9rem;
    margin-left: 8px;
}

.event-items {
    display: flex;
    flex-direction: column;
    gap: 12px;

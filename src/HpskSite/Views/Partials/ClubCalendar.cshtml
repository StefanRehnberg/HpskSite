.list-view-empty {
    text-align: center;
    padding: 60px 20px;
    color: var(--bs-secondary-color);
}

.list-view-empty i {
    font-size: 3rem;
    margin-bottom: 16px;
    opacity: 0.5;
}

/* Past Event Styles */

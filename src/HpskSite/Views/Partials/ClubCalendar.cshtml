.expand-description-link:hover {
    text-decoration: underline;
    color: var(--bs-primary-border-subtle);
}

.expand-description-link.hidden {
    display: none;
}

.event-item .event-meta {
    margin-top: 8px;
    font-size: 0.85rem;
}

.event-item .badge {
    font-size: 0.75rem;
    padding: 4px 8px;

    color: var(--bs-secondary-color);
    font-size: 0.9rem;
    line-height: 1.5;
    display: block;
}

.expand-description-link {
    color: var(--bs-primary);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    display: inline-block;
    margin-top: 4px;

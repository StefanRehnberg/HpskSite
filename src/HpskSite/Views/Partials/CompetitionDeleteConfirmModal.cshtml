@*
 * Competition Delete Confirmation Modal
 * Modal for confirming deletion of a competition
*@

<div class="modal fade" id="competitionDeleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger bg-opacity-10">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Competition
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete:
                </p>
                <p class="text-danger fw-bold ms-3 mb-4">
                    <span id="deleteCompetitionName">-</span>
                </p>

                <div class="alert alert-warning mb-3" role="alert">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        <strong>Warning:</strong> This action cannot be undone. 
                        Ensure there are no registrations for this competition.
                    </small>
                </div>

                <!-- Error Alert (if deletion fails due to registrations) -->
                <div class="alert alert-danger d-none" id="deleteErrorAlert" role="alert">
                    <strong>Cannot Delete:</strong>
                    <p id="deleteErrorMessage" class="mb-0 mt-2 small"></p>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteCompetition()">
                    <i class="bi bi-trash me-1"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDeleteCompetition() {
    const competitionId = window.deleteCompetitionId;

    if (!competitionId) {
        alert('Competition ID not set');
        return;
    }

    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
    const button = event.target;
    const deleteErrorAlert = document.getElementById('deleteErrorAlert');
    const deleteErrorMessage = document.getElementById('deleteErrorMessage');

    button.disabled = true;
    button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
    deleteErrorAlert.classList.add('d-none');

    const payload = {
        competitionId: competitionId
    };

    fetch('/umbraco/surface/CompetitionAdmin/DeleteCompetition', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': token
        },
        credentials: 'include',
        body: JSON.stringify(payload)
    })
        .then(response => response.json())
        .then(data => {
            button.disabled = false;
            button.innerHTML = '<i class="bi bi-trash me-1"></i>Delete';

            if (data.success) {
                alert('Competition deleted successfully!');
                bootstrap.Modal.getInstance(document.getElementById('competitionDeleteConfirmModal')).hide();

                // OPTIMIZED: Remove from table instead of full reload
                if (typeof window.removeCompetitionFromTable === 'function') {
                    window.removeCompetitionFromTable(window.deleteCompetitionId);
                } else {
                    window.reloadCompetitionsList();
                }
            } else {
                // Show error message
                deleteErrorMessage.innerHTML = data.message || 'Failed to delete competition';
                deleteErrorAlert.classList.remove('d-none');
            }
        })
        .catch(error => {
            button.disabled = false;
            button.innerHTML = '<i class="bi bi-trash me-1"></i>Delete';
            deleteErrorMessage.textContent = error.message || 'Network error';
            deleteErrorAlert.classList.remove('d-none');
        });
}
</script>

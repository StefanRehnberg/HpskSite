@using Umbraco.Cms.Core.Security
@using Umbraco.Cms.Web.Website.Controllers
@using Umbraco.Cms.Core.Services
@inject IMemberManager MemberManager
@inject IMemberService MemberService
@inject HpskSite.Services.AdminAuthorizationService AuthService
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;

    // Get current member and admin status
    var currentMember = await MemberManager.GetCurrentMemberAsync();
    var isLoggedIn = currentMember != null;
    var userInitials = "";
    var profilePictureUrl = "";
    var isAdmin = false;

    if (isLoggedIn && currentMember != null)
    {
        // Get member's name for initials
        var firstName = currentMember.Name?.Split(' ').FirstOrDefault() ?? "";
        var lastName = currentMember.Name?.Split(' ').LastOrDefault() ?? "";

        if (!string.IsNullOrEmpty(firstName))
        {
            userInitials = firstName.Substring(0, 1).ToUpper();
        }
        if (!string.IsNullOrEmpty(lastName) && lastName != firstName)
        {
            userInitials += lastName.Substring(0, 1).ToUpper();
        }

        // Get profile picture URL
        var memberData = MemberService.GetByEmail(currentMember.Email ?? "");
        if (memberData != null)
        {
            profilePictureUrl = memberData.GetValue<string>("profilePictureUrl") ?? "";
        }

        // Check if user is site administrator using centralized authorization service
        isAdmin = await AuthService.IsCurrentUserAdminAsync();
    }
}
<!DOCTYPE html>
<html data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(Model.Value<string>("pageTitle") ?? Model.Name) - HPSK</title>
    <meta name="description" content="@(Model.Value<string>("metaDescription") ?? "")" />

    <!-- Favicon -->

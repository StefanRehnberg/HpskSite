            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem 0;
        }

        .navbar-custom .logo {
            max-height: 45px;
            width: auto;
        }

        .navbar-custom .site-title {
            color: var(--navbar-text-hover);
            font-size: 1.3rem;
            font-weight: bold;
            margin: 0;
            white-space: nowrap;
        }

        .navbar-custom .site-subtitle {
            color: var(--navbar-subtitle);
            font-size: 0.75rem;
            margin: 0;
            display: none;
        }


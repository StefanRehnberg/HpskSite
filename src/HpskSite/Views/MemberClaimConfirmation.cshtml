@model HpskSite.Controllers.MemberClaimViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bekräfta deltagande - Träningsmatch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        .claim-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            max-width: 420px;
            width: 100%;
            margin: 1rem;
            overflow: hidden;
        }
        .claim-header {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
            padding: 1.5rem;
            text-align: center;
        }
        .claim-header.error {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }
        .claim-header i {
            font-size: 3rem;
            margin-bottom: 0.5rem;
        }
        .claim-body {
            padding: 1.5rem;
        }
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e5e7eb;
        }
        .info-row:last-child {
            border-bottom: none;
        }
        .info-label {
            color: #6b7280;
            font-size: 0.9rem;
        }
        .info-value {
            font-weight: 600;
            color: #1f2937;
        }
        .btn-confirm {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            border: none;
            color: white;
            padding: 1rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            margin-bottom: 0.75rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-confirm:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
            color: white;
        }
        .btn-cancel {
            background: #f3f4f6;
            border: none;
            color: #6b7280;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 8px;
            width: 100%;
        }
        .btn-cancel:hover {
            background: #e5e7eb;
            color: #374151;
        }
        .warning-box {
            background: #fef3c7;
            border: 1px solid #fcd34d;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
            color: #92400e;
            font-size: 0.9rem;
        }
        .error-message {
            text-align: center;
            padding: 2rem 1rem;
        }
        .error-message i {
            color: #ef4444;
            font-size: 4rem;
            margin-bottom: 1rem;
        }
        .error-message h2 {
            color: #1f2937;
            margin-bottom: 0.5rem;
        }
        .error-message p {
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="claim-card">
        @if (Model.IsValid)
        {
            <div class="claim-header">
                <i class="bi bi-person-check"></i>
                <h4 class="mb-0">Bekräfta deltagande</h4>
            </div>
            <div class="claim-body">
                <p class="text-muted text-center mb-3">
                    Du har blivit inbjuden att gå med i en träningsmatch som din registrerade medlem.
                </p>

                <div class="info-row">
                    <span class="info-label">Namn</span>
                    <span class="info-value">@Model.MemberName</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.MemberEmail))
                {
                    <div class="info-row">
                        <span class="info-label">E-post</span>
                        <span class="info-value">@Model.MemberEmail</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ClubName))
                {
                    <div class="info-row">
                        <span class="info-label">Klubb</span>
                        <span class="info-value">@Model.ClubName</span>
                    </div>
                }
                <div class="info-row">
                    <span class="info-label">Matchkod</span>
                    <span class="info-value">@Model.MatchCode</span>
                </div>

                @if (Model.IsTeamMatch && Model.Teams.Any())
                {
                    <div class="info-row">
                        <span class="info-label">Lagmatch</span>
                        <span class="info-value">Ja</span>
                    </div>
                }

                <div class="warning-box mt-3">
                    <i class="bi bi-info-circle me-2"></i>
                    Genom att bekräfta godkänner du att gå med i matchen som <strong>@Model.MemberName</strong>.
                    Dina resultat kommer att kopplas till ditt medlemskonto.
                </div>

                <form method="post" action="/match/@Model.MatchCode/member/confirm">
                    <input type="hidden" name="claimToken" value="@Model.ClaimToken" />

                    @if (Model.IsTeamMatch && Model.Teams.Any())
                    {
                        <div class="mb-3">
                            <label class="info-label mb-2 d-block">Välj lag</label>
                            <select name="teamId" class="form-select" required style="border-radius: 8px; padding: 0.75rem;">
                                <option value="">-- Välj lag --</option>
                                @foreach (var team in Model.Teams)
                                {
                                    var memberText = Model.MaxShootersPerTeam.HasValue
                                        ? $"({team.MemberCount}/{Model.MaxShootersPerTeam})"
                                        : $"({team.MemberCount})";
                                    <option value="@team.Id" @(team.IsFull ? "disabled" : "")>
                                        @team.TeamName @memberText @(team.IsFull ? "- Fullt" : "") @(team.ClubName != null ? $"- {team.ClubName}" : "")
                                    </option>
                                }
                            </select>
                        </div>
                    }

                    <button type="submit" class="btn btn-confirm">
                        <i class="bi bi-check-lg me-2"></i>Bekräfta och gå med
                    </button>
                </form>
                <a href="/traningsmatch" class="btn btn-cancel">
                    <i class="bi bi-x-lg me-2"></i>Avbryt
                </a>
            </div>
        }
        else
        {
            <div class="claim-header error">
                <i class="bi bi-exclamation-triangle"></i>
                <h4 class="mb-0">Fel</h4>
            </div>
            <div class="claim-body error-message">
                <p>@Model.ErrorMessage</p>
                <a href="/traningsmatch" class="btn btn-cancel mt-3">
                    <i class="bi bi-arrow-left me-2"></i>Tillbaka till träningsmatch
                </a>
            </div>
        }
    </div>
</body>
</html>

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "Master.cshtml";

    // Get token and email from query string
    var token = Context.Request.Query["token"].ToString();
    var email = Context.Request.Query["email"].ToString();

    // Validate that we have both parameters
    var hasValidParams = !string.IsNullOrEmpty(token) && !string.IsNullOrEmpty(email);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4">
                <h1 class="h3">Återställ lösenord</h1>
                <p class="text-muted">Skapa ett nytt lösenord för ditt konto</p>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    @if (!hasValidParams)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Ogiltig länk</strong><br>
                            Återställningslänken är ogiltig eller saknar nödvändiga parametrar.
                            <a href="/login-register" class="alert-link">Försök igen</a>.
                        </div>
                    }
                    else
                    {
                        <div id="resetResult"></div>

                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i>
                            <strong>Skapa nytt lösenord</strong><br>
                            Ange ditt nya lösenord nedan. Lösenordet måste vara minst 6 tecken långt.
                        </div>

                        <form id="passwordResetForm">
                            @Html.AntiForgeryToken()

                            <input type="hidden" id="resetToken" value="@token" />
                            <input type="hidden" id="resetEmailHidden" value="@email" />

                            <div class="mb-3">
                                <label for="resetEmailDisplay" class="form-label">E-postadress</label>
                                <input type="email" class="form-control" id="resetEmailDisplay" value="@email" disabled>
                            </div>

                            <div class="mb-3">
                                <label for="newPassword" class="form-label">Nytt lösenord <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" autocomplete="new-password">
                                <div class="form-text">Minst 6 tecken</div>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Bekräfta lösenord <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" autocomplete="new-password">
                            </div>

                            <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                                <i class="bi bi-key me-2"></i>Återställ lösenord
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <a href="/login-register" class="text-decoration-none">← Tillbaka till inloggning</a>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (hasValidParams)
{
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('passwordResetForm');
    const resultDiv = document.getElementById('resetResult');
    const submitBtn = document.getElementById('submitBtn');

    form.addEventListener('submit', function(e) {
        e.preventDefault();

        // Clear previous messages
        resultDiv.innerHTML = '';

        // Get form data
        const token = document.getElementById('resetToken').value;
        const email = document.getElementById('resetEmailHidden').value;
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        // Validate passwords match
        if (newPassword !== confirmPassword) {
            resultDiv.innerHTML = '<div class="alert alert-warning"><i class="bi bi-exclamation-triangle me-2"></i>Lösenorden matchar inte. Försök igen.</div>';
            return;
        }

        // Validate password length
        if (newPassword.length < 6) {
            resultDiv.innerHTML = '<div class="alert alert-warning"><i class="bi bi-exclamation-triangle me-2"></i>Lösenordet måste vara minst 6 tecken långt.</div>';
            return;
        }

        // Get anti-forgery token
        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

        // Disable submit button and show loading
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Återställer...';

        // Submit request
        fetch('/umbraco/surface/Member/ResetPasswordWithToken', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': antiForgeryToken
            },
            body: JSON.stringify({
                email: email,
                token: token,
                newPassword: newPassword
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                resultDiv.innerHTML = '<div class="alert alert-success"><i class="bi bi-check-circle me-2"></i><strong>Klart!</strong> ' + data.message + '<br><small>Du omdirigeras till inloggningssidan om ett ögonblick...</small></div>';
                form.reset();

                // Redirect after 2 seconds
                setTimeout(function() {
                    window.location.href = data.redirectUrl || '/login-register';
                }, 2000);
            } else {
                resultDiv.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i><strong>Fel:</strong> ' + data.message + '</div>';

                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="bi bi-key me-2"></i>Återställ lösenord';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            resultDiv.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>Ett fel uppstod. Försök igen senare.</div>';

            // Re-enable submit button
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="bi bi-key me-2"></i>Återställ lösenord';
        });
    });
});
</script>
}

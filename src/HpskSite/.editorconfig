# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files (C# source)
[*.{cs,csx}]
charset = utf-8-bom
indent_size = 4
indent_style = space

# Razor/Cshtml files (NO BOM!)
[*.{cshtml,razor}]
charset = utf-8
indent_size = 4
indent_style = space

# JSON files
[*.{json,json5}]
charset = utf-8
indent_size = 2
indent_style = space

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
charset = utf-8
indent_size = 2
indent_style = space

# Configuration files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
charset = utf-8
indent_size = 2
indent_style = space

# Markdown files
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# Web files
[*.{htm,html,js,ts,tsx,css,sass,scss,less}]
charset = utf-8
indent_size = 2
indent_style = space


<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HpskSite.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HpskSite.Mobile.Views"
    Title="Pistol.nu Träningsmatch"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Login Page (Initial Route) -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Main Tab Bar (after login) -->
    <TabBar Route="main">
        <ShellContent
            Route="dashboard"
            Title="Dashboard"
            Icon="icon_dashboard.png"
            ContentTemplate="{DataTemplate views:DashboardPage}" />

        <ShellContent
            Route="matches"
            Title="Matcher"
            Icon="icon_target.png"
            ContentTemplate="{DataTemplate views:MatchListPage}" />

        <ShellContent
            Route="settings"
            Title="Inställningar"
            Icon="icon_settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>

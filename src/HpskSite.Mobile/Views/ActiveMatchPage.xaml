                </Grid>

                <!--  Spectators List  -->
                <CollectionView ItemsSource="{Binding Spectators}" MaximumHeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="services:MatchSpectator">
